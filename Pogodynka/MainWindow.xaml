                    Background="{StaticResource cs_BBackground}"
                    Height="100"
                    Width="550"
                    CornerRadius="30"
                    Opacity="0.75">


                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="20*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>

                    <Image  x:Name="imgWeatherIconMonday"
                    Height="50"
                    Width="50"
                    SnapsToDevicePixels="True" Margin="25,13,475,17" Grid.Row="1"/>

