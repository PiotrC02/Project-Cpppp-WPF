                    Height="50"
                    Width="50"
                    SnapsToDevicePixels="True" Margin="400,13,100,17" Grid.Row="1"/>

                    <Image  x:Name="imgWeatherIconSunday"
                    Height="50"
                    Width="50"
                    SnapsToDevicePixels="True" Margin="475,13,25,17" Grid.Row="1"/>

